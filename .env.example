# Variáveis de Ambiente do Factoring System Django
# Copie este arquivo para .env e configure conforme necessário

# ============================================
# CONFIGURAÇÕES DJANGO
# ============================================

# SECRET_KEY - Chave secreta (MUDE EM PRODUÇÃO!)
SECRET_KEY=django-insecure-factoring-key-change-in-production

# DEBUG - Modo de desenvolvimento (True)
DEBUG=True

# ALLOWED_HOSTS - Hosts permitidos
ALLOWED_HOSTS=localhost,127.0.0.1

# ============================================
# BANCO DE DADOS
# ============================================

# Tipo de banco (sqlite, postgresql, mysql)
DB_ENGINE=django.db.backends.sqlite3
DB_NAME=db.sqlite3

# Para PostgreSQL/MySQL, descomente e configure:
# DB_ENGINE=django.db.backends.postgresql
# DB_NAME=factoring_db
# DB_USER=usuario
# DB_PASSWORD=senha
# DB_HOST=localhost
# DB_PORT=5432

# ============================================
# SERVIDOR
# ============================================

# Host do servidor
SERVER_HOST=127.0.0.1

# Porta do servidor
SERVER_PORT=8000

# ============================================
# EMAIL (Para integração futura)
# ============================================

# Email do sistema
EMAIL_HOST_USER=seu_email@gmail.com
EMAIL_HOST_PASSWORD=sua_senha_app

# Host SMTP
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587

# ============================================
# TIMEOUT E SESSÕES
# ============================================

# Timeout de sessão (em segundos)
SESSION_COOKIE_AGE=1209600

# Timeout de inatividade (em minutos)
INACTIVITY_TIMEOUT=30

# ============================================
# LOGGING
# ============================================

# Nível de log (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Arquivo de log
LOG_FILE=logs/factoring.log

# ============================================
# RELATÓRIOS
# ============================================

# Diretório de saída de relatórios
REPORTS_DIR=relatorios/

# Formato padrão (pdf, excel, csv)
DEFAULT_REPORT_FORMAT=pdf

# ============================================
# INTEGRAÇÃO BANCÁRIA (Futuro)
# ============================================

# Chaves de API dos bancos
BB_API_KEY=sua_chave_bb
ITAU_API_KEY=sua_chave_itau
SANTANDER_API_KEY=sua_chave_santander

# ============================================
# SEGURANÇA
# ============================================

# Habilitar HTTPS
SECURE_SSL_REDIRECT=False

# Cookie seguro
SESSION_COOKIE_SECURE=False

# CSRF Trusted Origins
CSRF_TRUSTED_ORIGINS=http://localhost:8000

# ============================================
# CACHE
# ============================================

# Cache backend (locmem, redis, memcache)
CACHE_BACKEND=django.core.cache.backends.locmem.LocMemCache

# URL do Redis (se usar)
REDIS_URL=redis://127.0.0.1:6379/0

# ============================================
# PERSONALIZAÇÕES
# ============================================

# Nome da empresa
COMPANY_NAME=Factoring System

# Moeda padrão
DEFAULT_CURRENCY=BRL

# Timezone
TIME_ZONE=America/Sao_Paulo

# Idioma
LANGUAGE_CODE=pt-br
